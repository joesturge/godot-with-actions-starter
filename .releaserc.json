{
  "branches": [
    "main",
    { "name": "beta", "prerelease": true },
    { "name": "alpha", "prerelease": true }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "godot --headless -s plug.gd install production || true"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "godot -s --headless version.gd ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "mkdir -p build"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "godot --export-release --headless \"Web\" \"build/index.html\""
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "zip -r build.zip -j ./build"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "build.zip", "label": "build" },
          { "path": "CHANGELOG.md", "label": "CHANGELOG" }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["project.godot", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
